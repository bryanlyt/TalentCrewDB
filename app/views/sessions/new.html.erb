<% provide(:title, "Login") %>
<br><br>
<h2><center>Login</center></h2>
<br>
<% if @user && @user.errors.present? %>
  <ul>
    <% @user.errors.full_messages.each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
        <br>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
        <br>
      <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
        <br>
      <span class="pull-right"><%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        Remember me on this computer</span>
      <% end %>

    <% end %>

    <p class="pull-right">New user? <%= link_to "Sign up now!", new_register_path, :target => '_blank' %></p>
  </div>
</div>